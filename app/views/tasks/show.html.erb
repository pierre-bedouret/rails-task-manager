<div class="d-flex justify-content-between align-items-center">
  <h1><%= @task.title %></h1>
  <div>
    <i class="fas fa-pen"></i> <%= link_to "Edit this task", edit_task_path, class: 'btn btn-secondary' %>
  </div>
</div>
<div class="alert alert-secondary" role="alert">
  <p><%= @task.details %></p>
</div>
<% check_class = @task.completed ? "fa-check-square" : "fa-square" %>
<% check_description = @task.completed ? "This taks is completed" : "This taks is not completed yet" %>
<p><i class="far <%= check_class %>"></i> <%= check_description %></p>
<hr>
<div class="link">
  <i class="fas fa-undo-alt"></i> <%= link_to "Back to List", tasks_path %>
</div>
